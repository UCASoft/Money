<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_account_type" />

        <Spinner
            android:id="@+id/dialog_account_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/dialog_account_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dialog_account_name" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_add_currencies" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.ucasoft.controls.AdapterLinearLayout
                android:id="@+id/dialog_currencies_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:layout_toStartOf="@id/dialog_add_currency_button"
                android:orientation="vertical"/>

            <Button
                android:id="@+id/dialog_add_currency_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/round_button" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/dialog_bank_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dialog_account_bank" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:layout_width="0dp"
                    android:id="@+id/dialog_account_bank"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/dialog_add_bank_button"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_width="40dp"
                    android:id="@+id/dialog_add_bank_button"
                    android:layout_height="40dp"
                    android:background="@drawable/round_button"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dialog_account_cards" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.ucasoft.controls.AdapterLinearLayout
                    android:id="@+id/dialog_cards_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@id/dialog_add_card_button"
                    android:orientation="vertical"/>

                <Button
                    android:id="@+id/dialog_add_card_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/round_button" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>